{% extends "DVrestTools::PageDesign" %}

{% block head %}
  <title>Sichtbarkeiten und Bestandsbindungen</title>
{% endblock %}

{% block PageBody %}
  {% if inhalte is not null %}
    <div id="Kopfspalte">
      <h1>Sichtbarkeiten und Bestandsbindungen</h1>
      <div class="cont top">
        <table cellspaching="0" cellpadding="5">
          <tr>
            <th>
              Name
            </th>
            <th class="id">
              ItemID
            </th>
            <th class="id">
              VarID
            </th>
            <th class="stock">
              <span class="icon-box"></span>
              WB Netto
            </th>
          </tr>
        </table>
    </div>
    </div>
    <div class="cont bottom">
      <table cellspaching="0" cellpadding="5">
        {% for item in inhalte %}
          <tr>
            <td class="itemName">
              {{ item.itemDescription.name1 }} {{ item.variationBase.variationName }}
            </td>
            <td class="id">
              {{ item.itemBase.id }}
            </td>
            <td class="id">
              {{ item.variationBase.id }}
            </td>
            <td class="stock">
              {{ item.variationStock.stockNet }}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <div id="Kopfspalte">
      <h1>Sichtbarkeiten und Bestandsbindungen</h1>
      Keine Items Ã¼bermittelt!
    </div>
  {% endif %}
{% endblock %}
